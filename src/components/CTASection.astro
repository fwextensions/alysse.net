---
interface Props {
	heading: string;
	description?: string;
	primaryButtonText: string;
	primaryButtonLink: string;
	secondaryButtonText?: string;
	secondaryButtonLink?: string;
	backgroundColor?: "blue" | "gradient" | "white";
}

const {
	heading,
	description,
	primaryButtonText,
	primaryButtonLink,
	secondaryButtonText,
	secondaryButtonLink,
	backgroundColor = "gradient",
} = Astro.props;

const bgClasses = {
	blue: "bg-primary-blue",
	gradient: "bg-gradient-to-r from-primary-blue to-[#003f5a]",
	white: "bg-white",
};

const textColor = backgroundColor === "white" ? "text-text-body" : "text-white";
---

<section class={`py-16 px-4 ${bgClasses[backgroundColor]}`}>
	<div class="max-w-4xl mx-auto text-center">
		<h2 class={`text-3xl md:text-4xl font-bold mb-4 ${textColor}`}>
			{heading}
		</h2>

		{
			description && (
				<p
					class={`text-lg md:text-xl mb-8 ${backgroundColor === "white" ? "text-text-body" : "text-blue-100"}`}
				>
					{description}
				</p>
			)
		}

		<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
			<a
				href={primaryButtonLink}
				class={`px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg ${
					backgroundColor === "white"
						? "bg-primary-blue text-white hover:bg-opacity-90"
						: "bg-primary-lime text-primary-blue hover:bg-opacity-90"
				}`}
			>
				{primaryButtonText}
			</a>

			{
				secondaryButtonText && secondaryButtonLink && (
					<a
						href={secondaryButtonLink}
						class={`px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 border-2 ${
							backgroundColor === "white"
								? "border-primary-blue text-primary-blue hover:bg-blue-50"
								: "border-white text-white hover:bg-white hover:bg-opacity-10"
						}`}
					>
						{secondaryButtonText}
					</a>
				)
			}
		</div>
	</div>
</section>
