---
interface Props {
	name: string;
	title: string;
}

const { name, title } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 p-6 border-l-4 border-blue-600">
	<h3 class="text-xl font-bold text-gray-900 mb-2">{name}</h3>
	{title && (
		<p class="text-gray-600 text-sm leading-relaxed">{title}</p>
	)}
</div>
